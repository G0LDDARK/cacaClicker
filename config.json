{
    "window": {
        "title": "Caca Clicker",
        "width": 385,
        "height": 760,
        "resizable": false,
        "vsync": false,
        "fullscreen": false
    },
    "backgrounds": {
        "main": {
            "asset": "assets/background.png",
            "scaleX": 0.9,
            "scaleY": 0.9
        }
    },
    "sprites": {
        "poop": {
            "asset": "assets/poopSprite.png",
            "x": 75,
            "y": 250,
            "scaleX": 0.5,
            "scaleY": 0.5
        },
        "chicken": {
            "asset": "assets/spritesheets/chicken/ChickenWalking.png",
            "frameWidth": 20, 
            "frameHeight": 21,
            "x":150,  // Position initiale de la sprite
            "y":21    // Position initiale de la sprite
        }
    },
    "creatures": {
        "chicken": {
            "state": "walking",
            "x": 150,   // Prends la priorité sur le x de la sprite
            "y": 21,    // Prends la priorité sur le y de la sprite
            "endX": 200, // Position finale de la sprite
            "endY": 21,  // Position finale de la sprite
            "velocityX": 10,
            "velocityY": 0,
            "turnX": true, // Le sprite retourne en arrière quand X max est atteint
            "turnY": false // Le sprite retourne en arrière quand Y max est atteint
        }
    },
    "fonts": {
        "main": {
            "asset": "assets/fonts/mainFont.ttf",
            "size": 20
        }
    }
}